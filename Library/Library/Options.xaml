<Window x:Class="Library.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Options" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="277*"/>
            <RowDefinition Height="157*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="195*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="171*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Library 2.jfif"/>
        </Grid.Background>
        <ListView SelectedIndex="{Binding BookIndex}"
                  SelectedItem="{Binding Book}"
                  ItemsSource="{Binding Books}"
                  Background="Transparent" Grid.Column="1" Margin="10,53,11,104" Grid.RowSpan="2" Grid.ColumnSpan="3">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontSize="20"
                               Text="{Binding }" 
                               Foreground="White"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Add Book" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="23,117,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Times New Roman" FontWeight="Bold" FontSize="25" Click="AddButton"/>
        <Button Grid.Column="1" Content="Edit Book" HorizontalAlignment="Left" Margin="94,118,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Times New Roman" FontWeight="Bold" FontSize="25" Click="EditButton"/>
        <Button Grid.Column="1" Content="Delete Book" HorizontalAlignment="Left" Margin="211,117,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Times New Roman" FontWeight="Bold" FontSize="25" Click="DeleteButton"/>
        <Button Content="Search Book" HorizontalAlignment="Left" Margin="192,0,0,0" VerticalAlignment="Top" Grid.Column="3" FontFamily="Times New Roman" FontWeight="Bold" FontSize="25" Click="SearchButton"/>
        <TextBox Text="{Binding SearchText}" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="619" Height="34" Grid.ColumnSpan="4"/>

    </Grid>
</Window>
