<Window x:Class="Library.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Options" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Library 2.jfif"/>
        </Grid.Background>
        <Button Content="Show Books" HorizontalAlignment="Left" Margin="140,85,0,0" VerticalAlignment="Top" Background="#FF01F73D" FontSize="30" FontFamily="Times New Roman" FontWeight="Bold"/>
        <Button Content="Add Book" HorizontalAlignment="Left" Margin="140,129,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="30" FontFamily="Times New Roman" FontWeight="Bold" Background="#FF0283F6" Width="160"/>
        <Button Content="Search Book  " HorizontalAlignment="Left" Margin="140,172,0,0" VerticalAlignment="Top" Click="Button_Click_1" FontSize="30" FontFamily="Times New Roman" FontWeight="Bold" Background="#FF02EBA8" Width="172"/>
        <Button Content="Delete Book " HorizontalAlignment="Left" Margin="143,217,0,0" VerticalAlignment="Top" FontSize="30" FontFamily="Times New Roman" FontWeight="Bold" Background="#FFF64003"/>

    </Grid>
</Window>
