<Window x:Class="Library.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="AddBook" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Library 2.jfif"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Click="BackButton" FontSize="25" Background="DarkRed" Content="Back" Grid.Row="0" Width="100" HorizontalAlignment="Left"/>

        <TextBlock FontSize="25" Background="DarkRed" Text="Add new book" TextAlignment="Center" Grid.Row="2"/>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="25" Background="DarkRed" Text="Title" TextAlignment="Center" Grid.Column="0"/>
            <TextBox Text="{Binding TitleTextBox}" FontSize="25" Grid.Column="1"/>

        </Grid>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="25" Background="DarkRed" Text="Author" TextAlignment="Center" Grid.Column="0"/>
            <TextBox Text="{Binding AuthorTextBox}" FontSize="25" Grid.Column="1"/>

        </Grid>

        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="25" Background="DarkRed" Text="Content" TextAlignment="Center" Grid.Column="0"/>
            <TextBox Text="{Binding ContentTextBox}" FontSize="25" Grid.Column="1" />

        </Grid>

        <Button Click="AddButton" FontSize="25" Background="DarkRed" Content="Add" Grid.Row="10"/>

    </Grid>
</Window>
