<Window x:Class="Library.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="AddBook" Height="450" Width="800">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/Library 2.jfif"/>
        </StackPanel.Background>

        <Button Click="BackButton" Margin="0 0 0 15" FontSize="25" HorizontalAlignment="Left" FontFamily="Times New Roman" Background="DarkRed" Content="Back"/>

        <TextBlock Margin="0 0 0 15" FontSize="30" FontFamily="Times New Roman" Background="DarkRed" Text="Add new book"/>

        <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
            <TextBlock Background="DarkRed" FontSize="25" FontFamily="Times New Roman" Text="Title: "/>
            <TextBox Text="{Binding TitleTextBox}" FontSize="25" FontFamily="Times New Roman" Width="740"/>
        </StackPanel>

        <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
            <TextBlock Background="DarkRed" FontSize="25" FontFamily="Times New Roman" Text="Author: "/>
            <TextBox Text="{Binding AuthorTextBox}" FontSize="25" FontFamily="Times New Roman" Width="716"/>
        </StackPanel>

        <Button Click="AddButton" Margin="0 0 0 15" FontSize="25" FontFamily="Times New Roman" Background="DarkRed" Content="Add"/>


    </StackPanel>
</Window>
